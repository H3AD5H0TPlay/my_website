---
import Layout from '../layouts/Layout.astro';
import SectionHeader from '../components/SectionHeader.astro';
import ProjectCard from '../components/ProjectCard.astro';
import { translations } from '../utils/translations';
---

<Layout title="Peter Varga - Software Developer">
  <!-- Hero Section -->
  <section class="h-[75vh] flex items-center justify-center relative overflow-hidden">
    <div class="absolute inset-0 bg-gradient-radial from-cyber-red/10 via-transparent to-transparent opacity-50"></div>
    <div class="container mx-auto px-4 py-4 text-center relative">
      <div class="relative backdrop-blur-sm bg-cyber-black/30 p-8 border border-cyber-red/20 transform hover:scale-[1.01] transition-transform duration-500 rounded-xl">
        <h1 class="text-4xl xs:text-5xl sm:text-6xl md:text-7xl font-cyber font-bold mb-6 animate-fade-in opacity-0" style="animation: fadeIn 1s ease-out forwards">
          {translations.hero.greeting} <span class="text-cyber-red animate-glow relative">
            Peter Varga
            <div class="absolute inset-0 bg-cyber-red/20 blur-xl"></div>
          </span>
        </h1>
        <p class="text-lg xs:text-xl sm:text-2xl text-white/80 mb-8 animate-fade-in opacity-0 font-cyber" style="animation: fadeIn 1s ease-out 0.5s forwards">
          {translations.hero.tagline}
        </p>
        <a
          href="#contact"
          class="bg-cyber-red text-white px-6 xs:px-8 py-3 font-cyber font-medium hover:bg-cyber-red-bright transition-all duration-300 hover:scale-105 animate-fade-in opacity-0 border border-cyber-red-bright shadow-[0_0_15px_rgba(255,23,68,0.5)] inline-block relative overflow-hidden group"
          style="animation: fadeIn 1s ease-out 1s forwards"
        >
          <span class="relative z-10">{translations.hero.cta}</span>
          <div class="absolute inset-0 bg-gradient-to-r from-cyber-red-bright to-cyber-red opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
          <div class="absolute inset-0 bg-cyber-red/20 blur-lg opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
        </a>
      </div>
    </div>
  </section>

  <!-- About Section -->
  <section id="about" class="py-8">
    <div class="container mx-auto px-4">
      <div class="opacity-0" style="animation: fadeIn 1s ease-out forwards scroll-trigger">
        <SectionHeader
          title={translations.about.title}
          subtitle={translations.about.subtitle}
        />
        <div class="max-w-3xl mx-auto font-cyber">
          <div class="relative mb-4 p-6 border border-cyber-red/20 bg-cyber-black/50 rounded-xl">
            <div class="absolute top-0 right-0 w-20 h-20 border-t-2 border-r-2 border-cyber-red/40 rounded-tr-xl"></div>
            <div class="absolute bottom-0 left-0 w-20 h-20 border-b-2 border-l-2 border-cyber-red/40 rounded-bl-xl"></div>
            <div class="space-y-4">
              <p>{translations.about.description1}</p>
              <p>{translations.about.description2}</p>
              <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 mt-6">
                <div class="bg-cyber-black/30 p-4 rounded-lg border border-cyber-red/10 hover:border-cyber-red/30 transition-colors">
                  <h3 class="text-cyber-red text-lg font-bold mb-2">Experience</h3>
                  <ul class="space-y-2 text-white/80">
                    <li>5+ years in web development</li>
                    <li>Full-stack expertise</li>
                    <li>Team leadership experience</li>
                  </ul>
                </div>
                <div class="bg-cyber-black/30 p-4 rounded-lg border border-cyber-red/10 hover:border-cyber-red/30 transition-colors">
                  <h3 class="text-cyber-red text-lg font-bold mb-2">Education</h3>
                  <ul class="space-y-2 text-white/80">
                    <li>BSc in Computer Science</li>
                    <li>Multiple certifications</li>
                    <li>Continuous learner</li>
                  </ul>
                </div>
              </div>
              <div class="mt-6">
                <h3 class="text-cyber-red text-lg font-bold mb-3">Technical Proficiencies</h3>
                <div class="grid grid-cols-2 sm:grid-cols-3 gap-3">
                  {['TypeScript', 'React', 'Node.js', 'Python', 'AWS', 'Docker'].map(skill => (
                    <div class="bg-cyber-black/20 px-3 py-2 rounded-md border border-cyber-red/10 text-sm hover:border-cyber-red/30 transition-colors">
                      {skill}
                    </div>
                  ))}
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Experience Section -->
  <section id="experience" class="py-8">
    <div class="container mx-auto px-4">
      <div class="opacity-0" style="animation: fadeIn 1s ease-out forwards scroll-trigger">
        <SectionHeader
          title="Experience"
          subtitle="My professional journey"
        />
        <div class="max-w-4xl mx-auto font-cyber">
          <div class="space-y-6">
            {[
              {
                title: "Senior Software Developer",
                company: "Tech Innovations Inc.",
                period: "2021 - Present",
                description: "Led development of multiple high-impact projects, mentored junior developers, and implemented best practices.",
                achievements: ["Reduced deployment time by 60%", "Implemented CI/CD pipeline", "Led team of 5 developers"]
              },
              {
                title: "Full Stack Developer",
                company: "Digital Solutions Ltd.",
                period: "2019 - 2021",
                description: "Developed and maintained multiple web applications using modern JavaScript frameworks.",
                achievements: ["Improved app performance by 40%", "Implemented new feature set", "Reduced bug count by 70%"]
              }
            ].map(job => (
              <div class="relative p-6 border border-cyber-red/20 bg-cyber-black/50 rounded-xl hover:border-cyber-red/40 transition-colors group">
                <div class="absolute top-0 right-0 w-16 h-16 border-t border-r border-cyber-red/40 rounded-tr-xl"></div>
                <div class="absolute bottom-0 left-0 w-16 h-16 border-b border-l border-cyber-red/40 rounded-bl-xl"></div>
                <div class="space-y-3">
                  <div class="flex justify-between items-start">
                    <div>
                      <h3 class="text-xl font-bold text-cyber-red">{job.title}</h3>
                      <p class="text-white/80">{job.company}</p>
                    </div>
                    <span class="text-sm text-cyber-red/80 bg-cyber-black/40 px-3 py-1 rounded-full border border-cyber-red/10">
                      {job.period}
                    </span>
                  </div>
                  <p class="text-white/90">{job.description}</p>
                  <ul class="list-disc list-inside space-y-1 text-white/80">
                    {job.achievements.map(achievement => (
                      <li>{achievement}</li>
                    ))}
                  </ul>
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>  <!-- Skills Section -->
  <section id="skills" class="py-20 bg-cyber-darker/50 border-y border-cyber-red/20">
    <div class="container mx-auto px-4">
      <SectionHeader
        title={translations.skills.title}
        subtitle={translations.skills.subtitle}
      />
      <div class="grid grid-cols-1 xs:grid-cols-2 md:grid-cols-4 lg:grid-cols-4 xl:grid-cols-8 2xl:grid-cols-8 gap-4 xs:gap-6">
        {['TypeScript', 'React', 'Node.js', 'Python', 'SQL', 'AWS', 'Docker', 'Git'].map((skill) => (
          <div class="bg-cyber-black p-4 border border-cyber-red/20 text-center hover:border-cyber-red transition-colors group">
            <span class="text-lg font-cyber text-cyber-red group-hover:animate-glow inline-block">{skill}</span>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Projects Section -->
  <section id="projects" class="py-20">
    <div class="container mx-auto px-4 max-w-[2400px] ultra:max-w-[8000px]">
      <SectionHeader
        title={translations.projects.title}
        subtitle={translations.projects.subtitle}
      />
      <div class="grid sm:grid-cols-1 md:grid-cols-2 xl:grid-cols-3 2xl:grid-cols-4 3xl:grid-cols-6 4xl:grid-cols-8 5xl:grid-cols-12 gap-8">
        <ProjectCard
          title="E-commerce Platform"
          description="A modern e-commerce platform built with Next.js and Stripe, featuring real-time inventory management and analytics."
          tags={['Next.js', 'TypeScript', 'Stripe', 'Tailwind CSS']}
          link="#"
        />
        <ProjectCard
          title="Task Management App"
          description="A collaborative task management application with real-time updates and team collaboration features."
          tags={['React', 'Node.js', 'Socket.io', 'MongoDB']}
          link="#"
        />
        <ProjectCard
          title="AI Image Generator"
          description="An advanced AI-powered image generation tool using stable diffusion and neural networks."
          tags={['Python', 'PyTorch', 'FastAPI', 'React']}
          link="#"
        />
        <ProjectCard
          title="Blockchain Explorer"
          description="A comprehensive blockchain explorer with real-time transaction tracking and analytics."
          tags={['Web3.js', 'React', 'Node.js', 'GraphQL']}
          link="#"
        />
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section id="contact" class="py-20 bg-cyber-darker/50 border-y border-cyber-red/20">
    <div class="container mx-auto px-4">
      <SectionHeader
        title={translations.contact.title}
        subtitle={translations.contact.subtitle}
      />
      <div class="max-w-lg mx-auto">
        <div class="bg-cyber-black p-8 border border-cyber-red/20 shadow-[0_0_30px_rgba(255,23,68,0.1)]">
          <div class="space-y-6">
            <a
              href="mailto:contact@example.com"
              class="block text-center bg-cyber-red text-white p-4 font-cyber hover:bg-cyber-red-bright transition-all duration-300 border border-cyber-red-bright shadow-[0_0_15px_rgba(255,23,68,0.3)] relative overflow-hidden group"
            >
              <span class="relative z-10">{translations.contact.sendEmail}</span>
              <div class="absolute inset-0 bg-gradient-to-r from-cyber-red-bright to-cyber-red opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
            </a>
            <div class="flex justify-center space-x-6 xs:space-x-8 sm:space-x-12">
              <a 
                href="#" 
                class="text-cyber-red hover:text-cyber-red-bright transition-colors font-cyber group"
              >
                <span class="inline-block group-hover:animate-glitch">GitHub</span>
              </a>
              <a 
                href="#" 
                class="text-cyber-red hover:text-cyber-red-bright transition-colors font-cyber group"
              >
                <span class="inline-block group-hover:animate-glitch">LinkedIn</span>
              </a>
              <a 
                href="#" 
                class="text-cyber-red hover:text-cyber-red-bright transition-colors font-cyber group"
              >
                <span class="inline-block group-hover:animate-glitch">Twitter</span>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
